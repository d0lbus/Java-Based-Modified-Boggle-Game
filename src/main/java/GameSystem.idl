module GameSystem {
interface CallbackInterface {
    void CreateLobGUI( in string username, in string gameId);
    void UpdateLobGUI( in string username);
    void informUser(in long userPosition, in string word, in long score);

    };


    interface GameServer {
        boolean login(in string username, in string password, out string sessionToken);
        boolean logout(in string sessionToken);
        string hostGame(in string sessionToken, in CallbackInterface gci);
        boolean joinRandomGame(in string sessionToken, in CallbackInterface gci);
        boolean joinGame(in string sessionToken, in string gameId);
        boolean startGame(in string sessionToken, in string gameId);
        void submitWord(in string sessionToken, in string gameId, in string word);
        string getLetters(in string sessionToken, in string gameId);

    };

    

    exception InvalidCredentials{};

    exception AlreadyLoggedIn{};

    exception InvalidWord{};

};
